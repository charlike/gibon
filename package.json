{
  "name": "@tunnckocore/opensource",
  "homepage": "https://github.com/tunnckocore/opensource",
  "private": true,
  "workspaces": [
    "packages/*",
    "@tunnckocore/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --since",
    "now-build": "yarn test",
    "build": "jest -c jest/build.js --onlyChanged",
    "bundle": "jest -c jest/bundle.js --onlyChanged",
    "clean:dist": "rm -rf packages/*/dist @tunnckocore/*/dist",
    "clean:fresh": "lerna clean -y && rm -rf node_modules",
    "cleanup": "yarn clean:dist && yarn clean:fresh",
    "cr": "node create-package.js",
    "docs": "jest -c jest/docs.js --onlyChanged",
    "fmt": "prettier '**/*' --write",
    "jest:all": "jest -c jest/full.js --onlyChanged",
    "lint": "jest -c jest/lint.js --onlyChanged",
    "patch-verb": "cp verb-repo-helpers-patch.js node_modules/verb-repo-helpers/index.js",
    "postsetup": "yarn patch-verb",
    "postsetup:ci": "yarn patch-verb",
    "pre-commit": "yarn docs && yarn fmt",
    "refresh": "yarn cleanup && yarn setup",
    "release": "lerna version && lerna publish from-package",
    "setup": "yarn && yarn bootstrap",
    "setup:ci": "yarn --frozen-lockfile && yarn bootstrap",
    "test": "jest -c jest/test.js"
  },
  "dependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.1",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@wessberg/rollup-plugin-ts": "^1.1.73",
    "builtin-modules": "^3.1.0",
    "enquirer": "^2.3.2",
    "eslint": "^6.5.1",
    "esm": "^3.2.25",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.1",
    "prettier": "^1.18.2",
    "prettier-plugin-pkg": "^0.4.4",
    "prettier-plugin-sh": "^0.2.1",
    "react": "^16.10.2",
    "rollup": "^1.25.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "typescript": "^3.6.4",
    "verb": "verbose/verb#dev",
    "verb-generate-readme": "^0.8.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'yarn run pre-commit'",
      "commit-msg": "echo 'commitlint -E HUSKY_GIT_PARAMS'"
    }
  },
  "meta": {
    "build": [
      "koa-better-body",
      "parse-function"
    ],
    "bundle": [
      "@tunnckocore/execa"
    ]
  },
  "renovate": {
    "extends": "@tunnckocore"
  }
}

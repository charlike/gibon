{
  "private": true,
  "name": "@tunnckocore/opensource",
  "homepage": "https://github.com/tunnckocore/opensource",
  "workspaces": [
    "packages/*",
    "@tunnckocore/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --since",
    "setup": "yarn refresh && yarn pre-commit",
    "setup:ci": "yarn refresh:ci && yarn pre-commit",
    "refresh": "yarn && yarn bootstrap",
    "refresh:ci": "yarn --frozen-lockfile && yarn bootstrap",
    "fresh": "yarn clean:dist && yarn clean:fresh",
    "clean:fresh": "lerna clean -y && rm -rf node_modules",
    "clean:dist": "rm -rf packages/*/dist @tunnckocore/*/dist",
    "pre-commit": "yarn jest:all || (yarn resque && yarn jest:all)",
    "jest:all": "jest -c jest.config.js",
    "lint": "jest -c jest.lint.config.js",
    "test": "jest -c jest.test.config.js",
    "build": "jest -c jest.build.config.js",
    "bundle": "jest -c jest.bundle.config.js",
    "release": "lerna version && lerna publish from-package",
    "cr": "node create-package.js",
    "resque": "lerna exec 'babel src -d dist/main --presets @tunnckocore --source-maps both' --stream --scope 'jest-runner-rollup' --scope '@tunnckocore/*jest-runner*'"
  },
  "dependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@tunnckocore/babel-preset": "*",
    "@tunnckocore/eslint-config": "*",
    "@tunnckocore/jest-runner-babel": "*",
    "@tunnckocore/jest-runner-eslint": "*",
    "@tunnckocore/prettier-config": "*",
    "@tunnckocore/typescript-config": "*",
    "enquirer": "^2.3.2",
    "eslint": "^6.4.0",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "react": "^16.10.1",
    "semver": "^6.3.0",
    "typescript": "^3.6.3"
  },
  "renovate": {
    "extends": "@tunnckocore"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'yarn test:commit'",
      "commit-msg": "echo 'commitlint -E HUSKY_GIT_PARAMS'"
    }
  }
}

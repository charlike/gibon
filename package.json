    "enquirer": "2.3.4",
    "eslint": "6.8.0",
    "esm": "3.2.25",
    "glob": "7.1.6",
    "hela": "3.0.0-next.20200119.4",
    "husky": "4.0.10",
    "jest": "24.9.0",
